<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUserActivity">
    <TextView
        android:id="@+id/vu_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop='74dp'
        android:layout_marginStart='20dp'
        />

    <EditText
        android:id="@+id/vu_profile_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable='false'
        android:enabled='false'
        android:inputType="textPersonName"
        android:layout_marginTop='60dp'
        android:layout_marginStart='26dp'
        app:layout_constraintStart_toEndOf="@id/vu_profile_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/vu_profile_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='46dp'
        android:text="Last Name"
        app:layout_constraintEnd_toEndOf="@+id/vu_profile_name"
        app:layout_constraintStart_toStartOf="@+id/vu_profile_name"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_name" />

    <EditText
        android:id="@+id/vu_profile_edit_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='20dp'
        android:ems="10"
        android:focusable='false'
        android:enabled='false'
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/vu_profile_edit_name"
        app:layout_constraintStart_toStartOf="@+id/vu_profile_edit_name"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_edit_name" />

    <TextView
        android:id="@+id/vu_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='46dp'
        android:text="Username"
        app:layout_constraintEnd_toEndOf="@+id/vu_profile_last_name"
        app:layout_constraintStart_toStartOf="@+id/vu_profile_last_name"
        app:layout_constraintTop_toBottomOf="@+id/vu_profile_last_name" />

    <EditText
        android:id="@+id/vu_profile_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='20dp'
        android:ems="10"
        android:focusable='false'
        android:enabled='false'
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/vu_profile_edit_last_name"
        app:layout_constraintStart_toStartOf="@id/vu_profile_edit_last_name"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_edit_last_name" />

    <TextView
        android:id="@+id/vu_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='46dp'
        android:text="Email"
        app:layout_constraintEnd_toEndOf="@id/vu_profile_username"
        app:layout_constraintStart_toStartOf="@id/vu_profile_username"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_username" />

    <EditText
        android:id="@+id/vu_profile_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop='20dp'
        android:ems="10"
        android:focusable='false'
        android:enabled='false'
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/vu_profile_edit_username"
        app:layout_constraintStart_toStartOf="@id/vu_profile_edit_username"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_edit_username" />

    <TextView
        android:id="@+id/vu_profile_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginTop='46dp'
        app:layout_constraintEnd_toEndOf="@id/vu_profile_email"
        app:layout_constraintStart_toStartOf="@id/vu_profile_email"
        app:layout_constraintTop_toBottomOf="@id/vu_profile_email" />

    <EditText
        android:id="@+id/vu_profile_edit_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable='false'
        android:enabled='false'
        android:text='A User at Ink Link'
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginTop='20dp'
        app:layout_constraintEnd_toEndOf="@+id/vu_profile_edit_email"
        app:layout_constraintStart_toStartOf="@+id/vu_profile_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/vu_profile_edit_email" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id='@+id/vu_report_btn'
        app:layout_constraintTop_toBottomOf="@id/vu_profile_edit_about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal='40dp'
        android:background='@color/colorButtonNegative'
        android:textColor='#ffffff'
        android:layout_marginTop='64dp'
        android:text='Report User'/>

</androidx.constraintlayout.widget.ConstraintLayout>