<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop='32dp'
            android:layout_marginStart='20dp'
            />

        <EditText
            android:id="@+id/profile_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart='26dp'
            android:layout_marginTop='20dp'
            android:ems="10"
            android:layout_marginEnd='30dp'
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='46dp'
            android:text="Last Name"
            app:layout_constraintEnd_toEndOf="@+id/profile_name"
            app:layout_constraintStart_toStartOf="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@id/profile_name" />

        <EditText
            android:id="@+id/profile_edit_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='20dp'
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_name"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_name"
            app:layout_constraintTop_toBottomOf="@id/profile_edit_name" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='46dp'
            android:text="Username"
            app:layout_constraintEnd_toEndOf="@+id/profile_last_name"
            app:layout_constraintStart_toStartOf="@+id/profile_last_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_last_name" />

        <EditText
            android:id="@+id/profile_edit_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='20dp'
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_last_name"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_last_name"
            app:layout_constraintTop_toBottomOf="@id/profile_edit_last_name" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop='46dp'
            android:text="Email"
            app:layout_constraintEnd_toEndOf="@+id/profile_username"
            app:layout_constraintStart_toStartOf="@+id/profile_username"
            app:layout_constraintTop_toBottomOf="@+id/profile_username" />

        <EditText
            android:id="@+id/profile_edit_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='20dp'
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_username"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_username"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_username" />

        <TextView
            android:id="@+id/profile_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop='46dp'
            android:text="Password"
            app:layout_constraintEnd_toEndOf="@+id/profile_email"
            app:layout_constraintStart_toStartOf="@+id/profile_email"
            app:layout_constraintTop_toBottomOf="@+id/profile_email" />

        <EditText
            android:id="@+id/profile_edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='20dp'
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_email"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_email"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_email" />

        <TextView
            android:id="@+id/profile_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginTop='46dp'
            app:layout_constraintEnd_toEndOf="@+id/profile_password"
            app:layout_constraintStart_toStartOf="@+id/profile_password"
            app:layout_constraintTop_toBottomOf="@+id/profile_password" />

        <EditText
            android:id="@+id/profile_edit_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint='Tell us about Yourself'
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginTop='20dp'
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_password"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_password"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_password" />

        <Button
            android:id="@+id/profile_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor='#ffffff'
            android:background='@color/colorButtonPositive'
            android:text="Update Profile"
            android:paddingHorizontal='30dp'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_about" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>